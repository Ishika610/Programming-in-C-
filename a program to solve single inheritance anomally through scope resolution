#include <bits/stdc++.h>
using namespace std;
class A
{
    public:
    void show()
    {
        cout<<"this is base class"<<endl;
    }
};
class B:public A
{
    public:
    void show()
    {
        cout<<"this is derived class"<<endl;
    }
};
int main()
{
    B b1;
    b1.A::show();
    b1.show();
    return 0;
}
