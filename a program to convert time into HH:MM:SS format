#include <bits/stdc++.h>
using namespace std;
class tim
{
    int n;
    public:
    tim()
    {
        cout<<"enter the time you want to convert ";
        cin>>n;
        int hours=n/3600;
        n=n%3600;
        int minutes=n/60;
        n=n%60;
        int seconds=n;
        cout<<"HH:MM:SS = "<<hours<<":"<<minutes<<":"<<seconds;
    }
    
};
int main()
{   
    tim b;
    return 0;
}
