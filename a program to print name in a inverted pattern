#include <bits/stdc++.h>
using namespace std;

int main()
{
    char name[20];
    //string name;
    cout<<"enter your name ";
    cin.getline(name,20);
    //cout<<"name : "<<name;
    cout.write(name,10).write(name,20);
    int length;
    length =strlen(name);
    //cout<<length;
    for(int i=1;i<=length;i++)
    {
        cout.write(name,i);
        cout<<endl;
    }
    for(int i=length;i>=1;i--)
    {
        cout.write(name,i);
        cout<<endl;
    }
    return 0;
}
