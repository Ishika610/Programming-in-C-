#include <bits/stdc++.h>
using namespace std;
int main(int argc, char const *argv[])
{
    int i,n,s;
    float a;
    s=0;
    cout<<"enter a number ";
    cin>>n;
    for ( i = 1; i <=n; i++)
    {
        s=s+i;
    }
    a=s/n;
    cout<<"sum is "<<s<<endl;
    cout<<"average is "<<a;
    return 0;
}
