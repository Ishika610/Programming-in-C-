#include <bits/stdc++.h>
using namespace std;
class add 
{
    int a,b,c;
    public:
    add()
    {
        cout<<"enter two numbers ";
        cin>>a>>b;
        c=a+b;
    
    }
    add(int a,int b)
    {
        c=a+b;
    }
    void putdata()
    {
        cout<<"the sum is "<<c<<endl;
    }
};
int main()
{
    add a;
    a.putdata();
    add b(10,15);
    b.putdata();
    return 0;
}
