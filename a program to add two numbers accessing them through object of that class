#include <bits/stdc++.h>
using namespace std;
class comp
{
    int a,b;
    public:
    void getdata(int p,int q)
    {
        a=p;b=q;
    }
    void add(comp c1,comp c2)
    {
        a=c1.a + c2.a;
        b=c1.b + c2.b;
    }
    void putdata()
    {
        cout<<a<<"+i"<<b<<endl;
    }
};
int main()
{
    int p=10,q=20;
    comp c1,c2,c3;
    c1.getdata(p,q);
    c2.getdata(30,40);
    c3.add(c1,c2);
    c1.putdata();
    c2.putdata();
    c3.putdata();

    
    return 0;
}
